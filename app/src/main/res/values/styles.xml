<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme to enable day/night support. -->
    <style name="Base.Theme.WpDisplay.DayNight" parent="Theme.Material3.Light.NoActionBar">
        <!-- Theme-dependent drawables -->
        <item name="background_border">@drawable/background_border_dark</item>
    </style>

    <style name="Theme.WpDisplay" parent="Base.Theme.WpDisplay.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorSecondary">@color/teal_500</item>
    </style>

    <style name="TextAppearance.App.Unit" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Temperature" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextAppearance.App.TextItem" parent="TextAppearance.Material3.HeadlineLarge" />

    <style name="TextAppearance.App.Body1.Secondary" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Body1.Green" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/teal_500</item>
    </style>

    <style name="TextAppearance.App.Body1.Error" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.WpDisplay.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="Widget.WpDisplay.Toolbar" parent="Widget.Material3.Toolbar.OnSurface">
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.WpDisplay.Toolbar</item>
    </style>

    <style name="ThemeOverlay.WpDisplay.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.WpDisplay.Snackbar" parent="">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">@drawable/wp_snackbar_background_dark</item>
    </style>

</resources>
