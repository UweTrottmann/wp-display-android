<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorSecondary">@color/blue_a400</item>
    </style>

    <style name="TextAppearance"/>

    <style name="TextAppearance.App"/>

    <style name="TextAppearance.App.Unit" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Body1.Secondary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Body1.Green" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/teal_500</item>
    </style>

    <style name="TextAppearance.App.Body1.Orange" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/orange_500</item>
    </style>

    <style name="Widget" />

    <style name="Widget.App" />

    <style name="Widget.App.ActionBar"/>

</resources>
