<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme to enable day/night support. -->
    <style name="Base.Theme.WpDisplay.DayNight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/teal_700</item>
    </style>

    <style name="Theme.WpDisplay" parent="Base.Theme.WpDisplay.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="TextAppearance.App.Unit" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Temperature" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextAppearance.App.Body1.Secondary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Body1.Green" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/teal_500</item>
    </style>

    <style name="TextAppearance.App.Body1.Error" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="Widget.WpDisplay.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="ThemeOverlay.WpDisplay.Toolbar.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorOnSurface">?attr/colorPrimary</item>
    </style>

    <style name="Widget.WpDisplay.Snackbar" parent="">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">@drawable/wp_snackbar_background_dark</item>
    </style>

</resources>
